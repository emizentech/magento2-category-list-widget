<?php
$categories = $this->getCategoryCollection();
$categoryHelper = $this->getCategoryHelper();
$canshowImg = $this->canShowImage();
$title = $block->getTitle() ? __($block->getTitle()) : 'Categories';

?>
<?php if ($title): ?>
    <div class="block-title">
        <strong><?php /* @escapeNotVerified */ echo $title; ?></strong>
    </div>
<?php endif ?>
<div class="block-content catalog-category">
    <?php foreach ($categories as $category): ?>
        <?php $cat = $this->getCategorymodel($category->getId()); ?>

        <span class="category">
            <a href="<?php echo $cat->getUrl(); ?>">
                <?php if ($canshowImg && $cat->getImageUrl()): ?>
                    <img src="<?= $cat->getImageUrl(); ?>" alt="" width="<?= $this->getImagewidth(); ?>" height="<?= $this->getImageheight() ?>"/>
                <?php else: ?>
                    <span class="cat-title"><?php echo $cat->getName(); ?></span>
                <?php endif; ?>
            </a>
        </span>
    <?php endforeach; ?>
</div>
