<?php
    $categories = $block->getCategoryCollection();    
    $title = $block->getTitle();
?>
<?php if ($title):?>
    <div class="block-title">
        <strong><?php echo $block->escapeHtml($title) ?></strong>
    </div>
<?php endif ?>
<div class="block-content catalog-category">
    <?php foreach($categories as $category):?>
        <div class="category" style="display: inline-block;text-align: center;width:30%">
        <?php
            $link = $category->getUrl();
            if ($block->categoryIsPage($category->getId())) {
                $link = substr($link,0,-5);
            }
        ?>
            <a href="<?php echo $block->escapeUrl($link) ?>">
                <?php if($block->canShowImage() && $category->getImageUrl()):?>
                    <img src="<?php echo $block->escapeUrl($category->getImageUrl()) ?>" alt="" width="<?=$block->getImageWidth();?>" height="<?=$block->getImageHeight()?>"/>
                <?php endif;?>
                <?php if($block->canShowCategoryName()):?>
                    <p class="cat-title"><?php echo $block->escapeHtml($category->getName()) ?></p>
                <?php endif;?>
            </a>
        </div>
    <?php endforeach; ?>
</div>